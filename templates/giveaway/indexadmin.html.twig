{% extends 'base.html.twig' %}

{% block title %}Giveaway index{% endblock %}



{% block body %}
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Description</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for giveaway in giveaways %}
            <tr>
                <td>{{ giveaway.id }}</td>
                <td>{{ giveaway.Description }}</td>
                <td>
                    {% if giveaway.winner is null and giveaway.user is not empty %}
                        <a onclick="return confirm('Pick a winner?') && confirm('Are you really sure?');"href="{{ path('giveaway_pick_winner', {'id': giveaway.id}) }}">Pick a winner</a>
                    {% endif %}
                    <a href="{{ path('giveaway_edit', {'id': giveaway.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('giveaway_new') }}">Create new</a>
{% endblock %}
