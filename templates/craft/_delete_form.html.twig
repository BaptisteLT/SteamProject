<form method="post" action="{{ path('craft_delete', {'id': craft.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ craft.id) }}">
    <button class="btn_delete">Delete</button>
</form>
