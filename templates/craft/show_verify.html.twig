{% extends 'base.html.twig' %}

{% block title %}Craft{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/showcraftverify.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <h1>Craft</h1>

    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ craft.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ craft.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ craft.description }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ craft.cost }}</td>
            </tr>
            <tr>
                <th>Verified</th>
                <td>{{ craft.verified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ craft.dateAjout ? craft.dateAjout|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="img_show_verify" src="{{asset('images/crafts/')}}{{ craft.nomImage }}" alt="Card image cap"></td>
            </tr>
            <tr>
                <th>Updated at</th>
                <td>{{ craft.updatedAt ? craft.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('verify') }}">back to list</a>

    <a href="{{ path('craft_edit_verify', {'id': craft.id}) }}">edit</a>

    {{ include('craft/_delete_form_verify.html.twig') }}
{% endblock %}
