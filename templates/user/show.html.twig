{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td><img src="{{ user.avatar }}" alt="User Avatar" width="50" height="50"></td>
            </tr>
            <tr>
                <th>Tchat_ban</th>
                <td>{{ user.tchatBan ? user.tchatBan|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Site_ban</th>
                <td>{{ user.siteBan ? user.siteBan|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Tchat_ban_counter</th>
                <td>{{ user.tchatBanCounter }}</td>
            </tr>
            <tr>
                <th>Site_ban_counter</th>
                <td>{{ user.siteBanCounter }}</td>
            </tr>
            <tr>
                <th>SteamId</th>
                <td>{{ user.steamId }}</td>
            </tr>
            <tr>
                <th>CommunityVisibilityState</th>
                <td>{{ user.communityVisibilityState }}</td>
            </tr>
            <tr>
                <th>ProfileState</th>
                <td>{{ user.profileState }}</td>
            </tr>
            <tr>
                <th>ProfileName</th>
                <td>{{ user.profileName }}</td>
            </tr>
            <tr>
                <th>LastLogOff</th>
                <td>{{ user.lastLogOff ? user.lastLogOff|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CommentPermission</th>
                <td>{{ user.commentPermission }}</td>
            </tr>
            <tr>
                <th>ProfileUrl</th>
                <td>{{ user.profileUrl }}</td>
            </tr>
            <tr>
                <th>PersonaState</th>
                <td>{{ user.personaState }}</td>
            </tr>
            <tr>
                <th>PrimaryClanId</th>
                <td>{{ user.primaryClanId }}</td>
            </tr>
            <tr>
                <th>JoinDate</th>
                <td>{{ user.joinDate ? user.joinDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CountryCode</th>
                <td>{{ user.countryCode }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{% for role in user.roles %}{#Evite l'erreur can't convert array to string#}
                        {{ role }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

{% endblock %}
