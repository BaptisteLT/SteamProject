<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/global.css') }}" rel="stylesheet"/>
            <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet"/>
            <link href="{{ asset('css/base.css') }}" rel="stylesheet"/>
            <link href="{{ asset('css/login.css') }}" rel="stylesheet"/>
            <link href="{{ asset('css/navbar.css') }}" rel="stylesheet"/>
            <link href="{{ asset('css/footer.css') }}" rel="stylesheet"/>
            <script src="{{ asset('js/jquery-3.4.1.slim.min.js') }}"></script>
            <script src="{{ asset('js/jquery-3.4.1.min.js') }}"></script>
            <script src="{{ asset('js/popper.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </head>
    
    <body>
        {% block header %}
          {#NAVBAR#}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
              <a class="navbar-brand"  href="{{ path('index') }}">OnlyCrafts</a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>

              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                  <li class="nav-item">
                    <a class="nav-link" href="{{ path('index') }}">Home <span class="sr-only">(current)</span></a>
                  </li>
                </ul>

                <ul class="navbar-nav ml-auto">
                  {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    {% include '@KnojectorSteamAuthentication/login.html.twig' with { 'btn': 1 } %}
                  {% else %}
                  <li class="nav-item">
                    <a href="{{ path('craft_new') }}"><button class="btn_share_craft">Share my craft</button></a>
                  </li>
                  {#ONLY IF MOD OR ADMIN#}
                  <li class="nav-item">
                    <a href="{{ path('charts') }}"><button class="btn_charts">See chart</button></a>
                  </li>
                  {#ONLY IF ADMIN#}
                  <li class="nav-item">
                    <a href="{{ path('craft_index') }}"><button class="btn_see_crafts">See all crafts</button></a>
                  </li>
                  {#ONLY IF MOD OR ADMIN#}
                  <li class="nav-item">
                    <a href="{{ path('verify') }}"><button class="btn_verify_crafts">Verify crafts</button></a>
                  </li>
                  {#ONLY IF ADMIN#}
                  <li class="nav-item">
                    <a href="{{ path('user_index') }}"><button class="btn_manage_users">Manage users</button></a>
                  </li>
                  {#ONLY IF ADMIN#}
                  <li class="nav-item">
                    <a href="{{ path('giveaway_index_admin') }}"><button class="btn_giveaway_index_admin">Manage GA</button></a>
                  </li>
                  


                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> Account </a>
                      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="{{ path('history') }}">History</a>
                        <a class="dropdown-item" href="{{ path('logout') }}">Logout</a>
                    </div>
                  </li>
                  {% endif %}
                </ul>
              </div>
            </nav>
            {#FIN DE NAVBAR#}
        {% endblock %}
        {% block body %}{% endblock %}

        {% block footer %}
          <footer>
            <div class="first_row_wrapper">
              <div class="container">
                <div class="row first_row">
                  <div class="col">
                    <p>Informations</p>
                    <p>About us</p>
                  </div>

                  <div class="col">
                    <p>Socials</p>
                    <p>Twitter</p>
                  </div>

                  <div class="col">
                    <p>Pages</p>
                    <p>Home</p>
                    <p>New creation</p>
                  </div>
                  <div class="col-4">
                    <p>Logo</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="second_row_wrapper">
              <div class="container">
                <div class="row second_row">
                  <p>copyright</p>
                </div>
              </div>
            </div>
          </div>
        </footer>
        {% endblock %}

        {% block javascripts %}{% endblock %}
    </body>
</html>
